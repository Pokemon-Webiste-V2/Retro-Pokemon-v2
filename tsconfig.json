{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src/",
    "ignoreDeprecations": "6.0",
    "target": "es6",
    "lib": ["ES2020", "dom"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "node_modules"]
}
